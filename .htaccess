RewriteEngine On
#RewriteBase /
#Options +FollowSymlinks



php_value    magic_quotes_gpc off
php_value    magic_quotes_runtime off
#####################
# Wyłączenie register_globals
php_value register_globals Off

#####################
#przekierowanie bez www na www
RewriteCond %{HTTP_HOST} ^rozkrecto.pl
RewriteRule ^(.*)$ http://www.rozkrecto.pl/$1 [R=permanent,L]

#####################
#przekierowanie dla strony bledu 404
ErrorDocument 404 http://rozkrecto.pl/

#####################
#dla dzialu
RewriteRule ^d/([0-9]*)-([a-zA-Z-]*)/([0-9]*)$ index.php?site=d&iddep=$1&dep=$2&page=$3 [L]
RewriteRule ^d/([0-9]*)-([a-zA-Z-]*)/f/([0-9]*)-([0-9a-zA-Z-]*)$ index.php?site=d&iddep=$1&dep=$2&idfile=$3&file=$4 [L]
RewriteRule ^d/([0-9]*)-([a-zA-Z-]*)$ index.php?site=d&iddep=$1&dep=$2 [L]


#####################
#dla kategorii
RewriteRule ^c/([0-9]*)-([a-zA-Z-]*)/([0-9]*)$ index.php?site=c&idcat=$1&cat=$2&page=$3 [L]
RewriteRule ^c/([0-9]*)-([a-zA-Z-]*)$ index.php?site=c&idcat=$1&cat=$2 [L]


#####################
#dla subkategorii
RewriteRule ^cs/([0-9]*)-([0-9a-zA-Z-]*)/([0-9]*)$ index.php?site=cs&idcatsub=$1&catsub=$2&page=$3 [L]
RewriteRule ^cs/([0-9]*)-([0-9a-zA-Z-]*)$ index.php?site=cs&idcatsub=$1&catsub=$2 [L]

#####################
#dla pliku
#RewriteRule ^f/([0-9]*)-([a-zA-Z-]*)$ index.php?site=f&idfile=$1&file=$2 [L]


#####################
#dla dokumentu
#RewriteRule ^doc/([0-9]*)-([a-zA-Z-]*)$ index.php?site=f&idfile=$1&file=$2 [L]

#####################
#RewriteRule ^index-([^-]*).htm$ index.php?zmienna=$1

RewriteRule ^index.html$ index.php [L]

